{ 
    "compilerOptions": { 
        "sourceMap": true, 
        "moduleResolution": "node", 
        "module": "commonjs", 
        "target": "es5", 
        "jsx": "react", 
        "strict": true, 
        "noImplicitReturns": true, 
        "noImplicitThis": true, 
        "noUnusedLocals": true, 
        "noUnusedParameters": true, 
        "suppressExcessPropertyErrors": true, 
        "suppressImplicitAnyIndexErrors": true, 
        "noFallthroughCasesInSwitch": true, 
        "lib": [ 
            "ES2015", 
            "DOM" 
        ],
    }, 
    "include": [ 
        "../src/*", 
        "../components/*", 
        "../react.ts" 
    ], 
    "exclude": [ 
        "../**/*.test.*" 
    ] 
}