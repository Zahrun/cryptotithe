{
    "compilerOptions": {
        "sourceMap": true,
        "moduleResolution": "node",
        "target": "es2017",
        "module": "commonjs",
        "jsx": "react",
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "suppressExcessPropertyErrors": true,
        "suppressImplicitAnyIndexErrors": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": [
        "../**/*"
    ],
    "exclude": [
        "../**/*.test.*"
    ]
}