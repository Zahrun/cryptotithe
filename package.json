{
    "name": "cryptotithe",
    "version": "0.6.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "start": "yarn run build-dev && electron .",
        "web": "yarn run build-dev && opn ./index.html",
        "test": "jest",
        "test-coveralls": "jest --coverage && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage",
        "build-dev": "tsc -p configs/tsconfig.json && yarn run browserify",
        "build": "tsc -p configs/tsconfig.json && yarn run browserify-prod",
        "browserify": "browserify ./react.js -o ./bundle.js -u ./data.json --im",
        "browserify-prod": "browserify ./react.js -o ./bundle.js -u ./data.json --im -g [ envify --NODE_ENV production ] -g uglifyify | uglifyjs --compress --mangle",
        "lint": "tslint -p ./configs/tsconfig.json -c ./configs/tslint.json --fix",
        "full-build-test-ci": "yarn run lint && yarn run test-coveralls && yarn run build",
        "prod-start": "set NODE_ENV=production&& yarn run start",
        "dist": "node ./configs/dist.js",
        "release": "yarn run build && yarn run dist"
    },
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@types/classnames": "^2.2.6",
        "@types/clone": "^0.1.30",
        "@types/csv2json": "^1.4.0",
        "@types/csvtojson": "^1.1.5",
        "@types/faker": "^4.1.4",
        "@types/got": "^8.3.4",
        "@types/jest": "^22.2.3",
        "@types/node": "^10.10.3",
        "@types/react": "^16.4.14",
        "@types/react-dom": "^16.0.7",
        "@types/react-infinite-scroller": "^1.0.7",
        "@types/validator": "^9.4.2",
        "browserify": "^16.2.3",
        "coveralls": "^3.0.2",
        "electron": "^4.0.1",
        "electron-devtools-installer": "^2.2.4",
        "electron-packager": "^13.0.1",
        "envify": "^4.1.0",
        "faker": "^4.1.0",
        "jest": "^23.6.0",
        "opn-cli": "^3.1.0",
        "ts-jest": "^23.10.1",
        "tslint": "^5.11.0",
        "typescript": "^3.0.3",
        "uglify-js": "^3.4.9",
        "uglifyify": "^5.0.1"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "globals": {
            "ts-jest": {
                "tsConfigFile": "./configs/tsconfig.json"
            }
        }
    },
    "dependencies": {
        "apexcharts": "^1.5.6",
        "classnames": "^2.2.6",
        "clone": "^2.1.2",
        "csv2json": "^1.4.2",
        "csvtojson": "^1.1.12",
        "font-awesome": "^4.7.0",
        "got": "^8.3.2",
        "is-electron": "^2.1.0",
        "react": "^16.5.2",
        "react-dom": "^16.5.2",
        "react-infinite-scroller": "^1.2.1",
        "tachyons": "^4.11.1",
        "validator": "^10.7.1"
    }
}
