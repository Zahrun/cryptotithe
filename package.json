{
    "name": "cryptotithe",
    "version": "0.4.1",
    "description": "",
    "main": "index.js",
    "scripts": {
        "start": "npm run build && electron .",
        "web": "npm run build && start ./index.html",
        "test": "jest",
        "build": "tsc -p configs/tsconfig.json && browserify ./react.js -o ./bundle.js -u ./data.json --im",
        "lint": "tslint -p ./configs/tsconfig.json -c ./configs/tslint.json --fix",
        "full-build-test": "npm run tslint && npm run test && npm run prod-build",
        "prod-start": "set NODE_ENV=production&& npm run start"
    },
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@types/faker": "^4.1.3",
        "@types/jest": "^22.2.3",
        "@types/node": "^10.9.3",
        "browserify": "^16.2.2",
        "electron": "^2.0.8",
        "electron-react-devtools": "^0.5.3",
        "faker": "^4.1.0",
        "jest": "^23.5.0",
        "ts-jest": "^22.4.6",
        "typescript": "^2.9.2"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "globals": {
            "ts-jest": {
                "tsConfigFile": "./configs/tsconfig.json"
            }
        }
    },
    "dependencies": {
        "@types/classnames": "^2.2.6",
        "@types/clone": "^0.1.30",
        "@types/csv2json": "^1.4.0",
        "@types/csvtojson": "^1.1.5",
