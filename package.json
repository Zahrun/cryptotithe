        "@types/react": "^16.4.12",
        "@types/react-dom": "^16.0.7",
        "@types/react-infinite-scroller": "^1.0.7",
        "@types/validator": "^9.4.1",
        "apexcharts": "^1.3.18",
        "classnames": "^2.2.6",
        "clone": "^2.1.2",
        "csv2json": "^1.4.2",
        "csvtojson": "^1.1.12",
        "font-awesome": "^4.7.0",
        "got": "^8.3.2",
        "is-electron": "^2.1.0",
        "react": "^16.4.2",
